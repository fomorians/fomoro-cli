#!/usr/bin/env node

var commander = require('commander');

commander
  .description('Manage training sessions.')
  .arguments('<start|stop|rm|status|watch|logs|ls|dl>')
  .command('start [sha]', 'Start a session.')
  .command('stop [sha]', 'Stop a session.')
  .command('rm [sha]', 'Remove a session.')
  .command('status [sha]', 'Get a session\'s status.')
  .command('watch [sha]', 'Watch a session.')
  .command('logs [sha]', 'Fetch logs from a session.')
  .command('ls', 'List all sessions.')
  .command('dl', 'Download session artifacts.')

  .parse(process.argv);
